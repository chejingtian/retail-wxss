/* components/sales-list.wxss */

.component-sales {
  padding: 30rpx 0;
}
.sales-single{
  padding:30rpx 24rpx 36rpx 36rpx;
  clear: both;
  overflow: hidden;

}
.sales-title {
  margin: 36rpx 30rpx;
  font-size: 28rpx;
  color: rgb(51, 51, 51);
}
.single-header-image-box {
  width: 120rpx;
  height:120rpx;
  position: relative;
  float:left;
  margin-right:24rpx;
}

.single-sales-hat {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  top: -16rpx;
  right: 10rpx;
}
.single-sales-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.single-image-cover{
  width:120rpx;
  height:120rpx;
  background: #fff;
  opacity: 0.5;
  position: absolute;
  left:2rpx;
  top:-1rpx;
}
.single-online-statue {
  width: 72rpx;
  height: 28rpx;
  border-radius: 20rpx;
  position: absolute;
  font-size: 20rpx;
  left: 26rpx;
  bottom: -14rpx;
  text-align: center;
}
.single-sales-name {
  float: left;
  width: 292rpx;
  font-size: 30rpx;
  color: rgb(51, 51, 51);
  margin: 8rpx 0;
}

.single-sales-grade {
  float: left;
  width: 292rpx;
  font-size: 22rpx;
  color: rgb(102, 102, 102);
}

.single-btn-connect {
  width: 196rpx;
  height: 48rpx;
  border: 1px solid rgb(102, 102, 102);
  border-radius: 6rpx;
  font-size: 28rpx;
  color: rgb(51, 51, 51);
  text-align: center;
  line-height: 48rpx;
  float: right;
  margin-right:10rpx;
  margin-top:-20rpx;
}

.sales-scroll-view {
  display: flex;
  white-space: nowrap;
  margin-top: 30rpx;
}

.sales-box {
  width: 275rpx;
  height: 366rpx;
  display: inline-block;
  margin: 0 12rpx;
  text-align: center;
  border: 1px solid rgb(241, 241, 241);
}

.sales-hat {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  top: 12rpx;
  right: 84rpx;
}

.sales-box:first-child {
  margin-left: 30rpx;
}

.sales-box:last-child {
  margin-right: 30rpx;
}

.header-image-box {
  position: relative;
}

.sales-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-top: 30rpx;
}
.image-cover{
  width:120rpx;
  height:120rpx;
  background: #fff;
  opacity: 0.5;
  position: absolute;
  left:79rpx;
  top:31rpx;
}

.online-statue {
  width: 72rpx;
  height: 28rpx;
  border-radius: 20rpx;
  position: absolute;
  font-size: 20rpx;
  left: 100rpx;
  bottom: 0rpx;
}

.online {
  color: #fff;
  background-color: rgb(223, 175, 125);
}

.offline {
  background: rgb(153, 153, 153);
}

.sales-name {
  font-size: 30rpx;
  color: rgb(51, 51, 51);
  margin: 8rpx 0;
}

.sales-grade {
  font-size: 22rpx;
  color: rgb(102, 102, 102);
}

.btn-connect {
  width: 196rpx;
  height: 48rpx;
  border: 1px solid rgb(102, 102, 102);
  border-radius: 6rpx;
  font-size: 28rpx;
  color: rgb(51, 51, 51);
  text-align: center;
  line-height: 48rpx;
  margin: 0 auto;
  margin-top: 34rpx;
}
